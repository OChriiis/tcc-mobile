<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.agendamento.Agendamentos">

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingHorizontal="50dp"
      android:text="Os agendamentos do seu condomínio aparecerão aqui!"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:textColor="@color/ternary"
      android:textSize="24sp"
      android:textStyle="italic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:gravity="center"
      android:paddingHorizontal="50dp"
      android:text="Por TowersAdmin"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="@color/ternary"
      android:textSize="12sp"
      android:textStyle="normal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_agendamentos"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toTopOf="@+id/btn_novo_agend"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:listitem="@layout/agendamento_recylcer_view_layout" />


  <Button
      android:id="@+id/iv_voltar"
      style="@style/Widget.AppCompat.Button.Small"
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:backgroundTint="@color/primary"
      android:drawableStart="@drawable/ic_baseline_arrow_back_24"
      android:drawableTint="#FFFFFF"
      android:gravity="center"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />




  <Button
      android:id="@+id/btn_novo_agend"
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:layout_marginEnd="24dp"
      android:layout_marginBottom="16dp"
      android:backgroundTint="@color/primary"
      android:text="NOVO AGENDAMENTO"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>